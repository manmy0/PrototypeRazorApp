<br />

<h3>Industry Contact Log</h3>
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Networking[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Networking[0].Company)
            </th>
            <th>
                Contact Information
            </th>
            <th>
                Progress Note
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Networking) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgressNotes)
            </td>    
        </tr>
}
    </tbody>
</table>
