@page
@model PrototypeRazorApp.Pages.NetworkingPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<ul class="nav nav-pills">
    <li class="nav-item">
        <a class="nav-link" asp-page="/ProfilePage/Index">Profile</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-page="/DashboardPage/Index">Dashboard</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-page="/GoalsPage/Index">Goals</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" asp-page="/NetworkingPage/Index">Networking</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-page="/CompetenciesPage/Index">Competencies</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-page="/CDLPage/Index">CDL</a>
    </li>
</ul>

<br />

<div class="container">
<label for="box3" style="display: flex; margin: 10px;">Elevator Pitch</label>
<div class="my-box3">
    <div class="col">
      <p>@Model.Networking[0].ElevatorPitch</p>
    </div>
</div>

<br />

<label for="box1" style="display: flex; margin: 10px; justify-content: flex-end;">Companies and Contacts of Interest</label>
<div class="my-box1">
    <div class="col">
        <p>@Model.Networking[0].CompaniesContact</p>
    </div>
</div>

</div>

<br />
<div class="container">
<label for="my-box2" style="display: flex; margin: 10px;">Networking Ice Breakers and Questions to Ask</label>
<div class="my-box2">
    <div class="col">
        <p>@Model.Networking[0].Questions</p>
    </div>
</div>

<br />

<label for="my-box" style="display: flex; margin: 10px;">Upcoming Events</label>
<div class="my-box">
    <div class="col">
        <p>@Model.Networking[0].UpcomingEvents</p>
    </div>
</div>
</div>

<br />

<h3>Industry Contact Log</h3>
<br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Networking[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Networking[0].Company)
            </th>
            <th>
                Contact Information
            </th>
            <th>
                Progress Note
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Networking) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgressNotes)
            </td>    
        </tr>
}
    </tbody>
</table>
