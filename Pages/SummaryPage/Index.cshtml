@page
@model PrototypeRazorApp.Pages.SummaryPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Summary[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary[0].ProfileImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary[0].GoalsCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary[0].NumConfidentCompentencies)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary[0].NumEmergingCompentencies)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary[0].LogbookCompleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Summary) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfileImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoalsCompleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumConfidentCompentencies)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumEmergingCompentencies)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LogbookCompleted)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
