@page
@model PrototypeRazorApp.Pages.DashboardPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<ul class="nav nav-pills">
    <li class="nav-item">
        <a class="nav-link" asp-page="/ProfilePage/Index">Profile</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" asp-page="/DashboardPage/Index">Dashboard</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-page="/GoalsPage/Index">Goals</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-page="/NetworkingPage/Index">Networking</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-page="/CompetenciesPage/Index">Competencies</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-page="/CDLPage/Index">CDL</a>
    </li>
</ul>

<br />

<div class="input-container">
    <h3>Date Range</h3>
    <label for="fromInput">From:</label>
    <input class="input" type="month" id="fromInput" name="from">

    <label for="toInput">To:</label>
    <input class="input" type="month" id="toInput" name="to">
</div>

<br />

<h3>Competency Performance Summary</h3>

<table class="table w-auto table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dashboard[0].Competency)
            </th>
            <th>
                Number of Performance Self Evaluation Examples
            </th>
            <th>
                Highest Attainment Level
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Dashboard) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Competency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumExamples)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HighestLevel)
            </td>
        </tr>
}
    </tbody>
</table>

<canvas id="myChart"></canvas>

<script>
        var ctx = document.getElementById('myChart').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['Emerging', 'Competent', 'Developing', 'Capable'],
            datasets: [{
                label: 'My First dataset',
                backgroundColor: [ 'rgb(255, 99, 132)',
      'rgb(54, 162, 235)',
      'rgb(255, 205, 86)'],
                borderColor: [ 'rgb(255, 99, 132)',
      'rgb(54, 162, 235)',
      'rgb(255, 205, 86)'],
                data: [0, 10, 5, 2]
            }]
        },
        options: {}
    });
</script>

